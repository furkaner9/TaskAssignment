@{
    ViewBag.Title = "Contact";
}

<h2>İletişim</h2>

<div class="contact-form" style="max-width: 600px; margin: 0 auto;">
    <p>Lütfen bizimle iletişime geçmek için aşağıdaki formu doldurun.</p>

    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Ad Soyad")
            @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Adınız ve Soyadınız" })
        </div>

        <div class="form-group">
            @Html.Label("E-Posta")
            @Html.TextBox("Email", null, new { @class = "form-control", type = "email", placeholder = "ornek@mail.com" })
        </div>

        <div class="form-group">
            @Html.Label("Konu")
            @Html.TextBox("Subject", null, new { @class = "form-control", placeholder = "Konu başlığı" })
        </div>

        <div class="form-group">
            @Html.Label("Mesajınız")
            @Html.TextArea("Message", null, new { @class = "form-control", rows = "5", placeholder = "Mesajınızı buraya yazın..." })
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Gönder</button>
    }
</div>